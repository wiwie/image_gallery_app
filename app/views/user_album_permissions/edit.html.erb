<%= bootstrap_form_for(@perm) do |f| %>
  <%= f.collection_select :user_id, User.all, :id, :email %>
  <%= f.collection_select :album_id, @albums, :id, :full_path %>
  <%= f.check_box :can_read, :value => @perm.can_read %>
  <%= f.check_box :can_edit, :value => @perm.can_edit %>
  <%= f.submit %>
<% end %>